import React, { useState } from 'react';
import { Alert, Button, StyleSheet, Text, TextInput, View } from 'react-native';
import { useMatrixRust } from './src/contexts/MatrixRustContext';

export default function E2EETestScreen() {
    const { homeserverUrl, setHomeserverUrl, testConnection, error } = useMatrixRust();
    const [testResult, setTestResult] = useState('');

    const handleTest = async () => {
        try {
            const result = await testConnection();
            setTestResult(result);
            Alert.alert('Success', 'Native E2EE module is working!');
        } catch (err: any) {
            Alert.alert('Error', err.message);
        }
    };

    return (
        <View style={styles.container}>
            <Text style={styles.title}>üîê E2EE Test (Native Rust)</Text>

            {error && <Text style={styles.error}>{error}</Text>}

            <TextInput
                style={styles.input}
                placeholder="Homeserver URL"
                value={homeserverUrl}
                onChangeText={setHomeserverUrl}
                autoCapitalize="none"
            />

            <Button title="Test Native E2EE Connection" onPress={handleTest} />

            {testResult ? (
                <View style={styles.resultBox}>
                    <Text style={styles.resultText}>{testResult}</Text>
                </View>
            ) : null}

            <Text style={styles.info}>
                This tests @unomed/react-native-matrix-sdk{'\n'}
                with native Rust E2EE (no WebAssembly!)
            </Text>
        </View>
    );
}

const styles = StyleSheet.create({
    container: {
        flex: 1,
        padding: 20,
        justifyContent: 'center',
        backgroundColor: '#f5f5f5',
    },
    title: {
        fontSize: 24,
        fontWeight: 'bold',
        marginBottom: 20,
        textAlign: 'center',
    },
    input: {
        backgroundColor: '#fff',
        padding: 15,
        borderRadius: 8,
        marginBottom: 15,
        borderWidth: 1,
        borderColor: '#ddd',
    },
    error: {
        color: 'red',
        marginBottom: 10,
        textAlign: 'center',
    },
    resultBox: {
        backgroundColor: '#e8f5e9',
        padding: 15,
        borderRadius: 8,
        marginTop: 20,
        borderLeftWidth: 4,
        borderLeftColor: '#4caf50',
    },
    resultText: {
        fontSize: 14,
        color: '#2e7d32',
        fontFamily: 'monospace',
    },
    info: {
        marginTop: 20,
        fontSize: 12,
        color: '#666',
        textAlign: 'center',
        fontStyle: 'italic',
    },
});
