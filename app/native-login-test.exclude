import React, { useState } from 'react';
import { ActivityIndicator, Alert, Button, StyleSheet, Text, TextInput, View } from 'react-native';
import { useAuthNative } from './src/contexts/AuthContextNative';

export default function NativeLoginTestScreen() {
    const { login, logout, isLoggedIn, isLoading, error, client } = useAuthNative();
    const [homeserver, setHomeserver] = useState('https://matrix.org');
    const [username, setUsername] = useState('');
    const [password, setPassword] = useState('');

    const handleLogin = async () => {
        if (!username || !password) {
            Alert.alert('Error', 'Please enter username and password');
            return;
        }
        try {
            await login(homeserver, username, password);
            Alert.alert('Success', 'Logged in with native SDK!');
        } catch (err: any) {
            Alert.alert('Login Error', err.message);
        }
    };

    const handleLogout = async () => {
        try {
            await logout();
            Alert.alert('Success', 'Logged out');
        } catch (err: any) {
            Alert.alert('Logout Error', err.message);
        }
    };

    if (isLoading) {
        return (
            <View style={styles.container}>
                <ActivityIndicator size="large" color="#0000ff" />
                <Text style={styles.loadingText}>Loading native session...</Text>
            </View>
        );
    }

    return (
        <View style={styles.container}>
            <Text style={styles.title}>⚡️ Native SDK Login Test</Text>

            {error && <Text style={styles.error}>{error}</Text>}

            {isLoggedIn ? (
                <View style={styles.loggedInContainer}>
                    <Text style={styles.successText}>✅ Logged In!</Text>
                    <Text style={styles.infoText}>Client is ready.</Text>
                    <Button title="Logout" onPress={handleLogout} color="red" />
                </View>
            ) : (
                <View style={styles.formContainer}>
                    <Text style={styles.label}>Homeserver</Text>
                    <TextInput
                        style={styles.input}
                        value={homeserver}
                        onChangeText={setHomeserver}
                        autoCapitalize="none"
                        placeholder="https://matrix.org"
                    />

                    <Text style={styles.label}>Username</Text>
                    <TextInput
                        style={styles.input}
                        value={username}
                        onChangeText={setUsername}
                        autoCapitalize="none"
                        placeholder="@user:matrix.org"
                    />

                    <Text style={styles.label}>Password</Text>
                    <TextInput
                        style={styles.input}
                        value={password}
                        onChangeText={setPassword}
                        secureTextEntry
                        placeholder="Password"
                    />

                    <Button title="Login (Native)" onPress={handleLogin} />
                </View>
            )}

            <Text style={styles.footer}>
                Testing @unomed/react-native-matrix-sdk
            </Text>
        </View>
    );
}

